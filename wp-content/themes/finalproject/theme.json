{
  "$schema": "https://schemas.wp.org/wp/6.7/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        { "color": "#2E236C", "name": "Primary", "slug": "primary" },
        { "color": "#433D8B", "name": "Accent", "slug": "accent" },
        {
          "color": "#C8ACD6",
          "name": "Background",
          "slug": "background"
        },
        { "color": "#17153B", "name": "Text", "slug": "text" }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "sans-serif"
    },
    "color": {
      "background": "var:preset|color|background",
      "text": "var:preset|color|text"
    },
    "blocks": {
      "core/navigation": {
        "color": {
          "background": "var|preset|color|primary"
        },
        "spacing": {
          "padding": {
            "bottom": "10px",
            "top": "10px",
            "left": "20px",
            "right": "20px"
          }
        }
      },
      "core/navigation-link": {
        "color": {
          "text": "var:preset|color|background"
        },
        "typography": {
          "fontSize": "24px"
        }
      }
    }
  }
}
